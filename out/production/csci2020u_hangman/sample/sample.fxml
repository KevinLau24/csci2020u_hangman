<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <ImageView fx:id="imageView" GridPane.columnIndex="0" GridPane.rowIndex="0" fitHeight="100" fitWidth="100"></ImageView>
    <Button fx:id="play" text="Play" onAction="#play" GridPane.columnIndex="0" GridPane.rowIndex="1"></Button>
    <Button fx:id="exit" text="Exit" onAction="#exit" GridPane.columnIndex="0" GridPane.rowIndex="2"></Button>
</GridPane>